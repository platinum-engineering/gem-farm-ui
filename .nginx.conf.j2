# Project: {{ CI_PROJECT_URL }}
# Environment: {{ CI_ENVIRONMENT_NAME|default('') }}

server {
  listen                    80;
  server_name               {{ DOMAIN_NAME }};

  if ($http_x_forwarded_proto = "http") {
    return 301 https://{{ DOMAIN_NAME }}$request_uri;
  }
  
  root {{ PROJECT_ROOT }}/{{ CI_ENVIRONMENT_NAME }};

  location / {
    try_files $uri $uri/ @rewrites;
  }

  gzip_static  on;
  gzip_proxied any;

  location @rewrites {
    rewrite ^(.+)$ /index.html last;
  }

  access_log                /var/log/nginx/gitlab-{{ CI_PROJECT_ID }}-{{ CI_ENVIRONMENT_NAME }}_access.log;
  error_log                 /var/log/nginx/gitlab-{{ CI_PROJECT_ID }}-{{ CI_ENVIRONMENT_NAME }}_error.log;

  listen 443 ssl; # managed by Certbot
  ssl_certificate /etc/letsencrypt/live/{{ DOMAIN_NAME }}/fullchain.pem; # managed by Certbot
  ssl_certificate_key /etc/letsencrypt/live/{{ DOMAIN_NAME }}/privkey.pem; # managed by Certbot
  include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
  ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot
}
